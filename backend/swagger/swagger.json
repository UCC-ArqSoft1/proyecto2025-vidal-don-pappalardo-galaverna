{
  "openapi": "3.0.0",
  "info": {
    "title": "Gym de los pibes",
    "version": "1.0.0",
    "description": "Documentación de la API del gym"
  },
  "paths": {
    "/actividades": {
      "get": {
        "summary": "Listar todas las actividades",
        "operationId": "getAllActividades",
        "tags": ["Actividades"],
        "responses": {
          "200": {
            "description": "Lista de actividades",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Actividad"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Crear una nueva actividad",
        "operationId": "createActividad",
        "tags": ["Actividades"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ActividadDTO"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Actividad creada exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Actividad"
                }
              }
            }
          },
          "400": {
            "description": "Error en la solicitud"
          }
        }
      }
    },
    "/actividades/{id}": {
      "get": {
        "summary": "Obtener una actividad por ID",
        "operationId": "getActividadById",
        "tags": ["Actividades"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Actividad encontrada",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Actividad"
                }
              }
            }
          },
          "404": {
            "description": "Actividad no encontrada"
          }
        }
      },
      "put": {
        "summary": "Actualizar una actividad existente",
        "operationId": "updateActividad",
        "tags": ["Actividades"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ActividadDTO"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Actividad actualizada",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Actividad"
                }
              }
            }
          },
          "400": {
            "description": "Error en la solicitud"
          },
          "404": {
            "description": "Actividad no encontrada"
          }
        }
      },
      "delete": {
        "summary": "Eliminar una actividad",
        "operationId": "deleteActividad",
        "tags": ["Actividades"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Actividad eliminada"
          },
          "404": {
            "description": "Actividad no encontrada"
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "Login de usuario",
        "operationId": "login",
        "tags": ["Autenticación"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginDTO"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Inicio de sesión exitoso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "access_token": {
                      "type": "string"
                    },
                    "refresh_token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Error en las credenciales"
          }
        }
      }
    },
    "/auth/register": {
      "post": {
        "summary": "Registrar un nuevo usuario",
        "operationId": "register",
        "tags": ["Autenticación"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UsuarioDTO"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuario registrado exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Usuario"
                }
              }
            }
          },
          "400": {
            "description": "Error en la solicitud"
          },
          "409": {
            "description": "El correo electrónico ya está registrado"
          }
        }
      }
    },
    "/auth/refresh-token": {
      "post": {
        "summary": "Refrescar el token de acceso",
        "operationId": "refreshToken",
        "tags": ["Autenticación"],
        "description": "Obtén un nuevo token de acceso enviando el refresh token desde la cookie.",
        "responses": {
          "200": {
            "description": "Token de acceso renovado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Token no válido o no presente en la cookie"
          }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "summary": "Cerrar sesión del usuario",
        "operationId": "logout",
        "tags": ["Autenticación"],
        "responses": {
          "200": {
            "description": "Sesión cerrada exitosamente"
          },
          "401": {
            "description": "No se encontró el refresh token"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Actividad": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "titulo": {
            "type": "string"
          },
          "descripcion": {
            "type": "string"
          },
          "dia": {
            "type": "string"
          },
          "horario": {
            "type": "string",
            "format": "time"
          },
          "duracion": {
            "type": "integer"
          },
          "cupo": {
            "type": "integer"
          },
          "categoria": {
            "type": "string"
          },
          "imagen_url": {
            "type": "string"
          },
          "active": {
            "type": "boolean"
          }
        }
      },
      "ActividadDTO": {
        "type": "object",
        "properties": {
          "titulo": {
            "type": "string"
          },
          "descripcion": {
            "type": "string"
          },
          "dia": {
            "type": "string"
          },
          "horario": {
            "type": "string",
            "format": "time"
          },
          "duracion": {
            "type": "integer"
          },
          "cupo": {
            "type": "integer"
          },
          "categoria": {
            "type": "string"
          },
          "imagen_url": {
            "type": "string"
          }
        }
      },
      "LoginDTO": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "UsuarioDTO": {
        "type": "object",
        "properties": {
          "nombre": {
            "type": "string"
          },
          "apellido": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password_hash": {
            "type": "string"
          },
          "active": {
            "type": "boolean"
          },
          "role_id": {
            "type": "integer"
          }
        }
      },
      "Usuario": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "nombre": {
            "type": "string"
          },
          "apellido": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "active": {
            "type": "boolean"
          },
          "role_id": {
            "type": "integer"
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "Actividades",
      "description": "Gestión de actividades"
    },
    {
      "name": "Autenticación",
      "description": "Gestión de usuarios y autenticación"
    }
  ]
}
